{
  "name": "template",
  "version": "1.0.0",
  "description": "Dashboard app",
  "main": "app.js",
  "scripts": {
    "watch:sass": "node-sass scss/main.scss assets/css/style.css -w",
    "devserver": "node .",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss assets/css/style.comp.css",
    "concat:css": "concat -o assets/css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' assets/css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass assets/css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "build": "npm i && node-sass scss/main.scss assets/css/style.css && tsc -p tsconfig.json && npm run clean",
    "clean": "rm -rf node_modules"
  },
  "author": "Dwayne",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/markdown-it": "^0.0.9",
    "@types/node": "^14.0.13",
    "@types/nodemailer": "^6.4.0",
    "@types/superagent": "^4.1.7",
    "autoprefixer": "^9.7.1",
    "concat": "^1.0.3",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "reloadify": "^0.2.2"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "gray-matter": "^4.0.2",
    "he": "^1.2.0",
    "markdown-it": "^11.0.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-modify-token": "^1.0.2",
    "markdown-it-task-checkbox": "^1.0.6",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.8",
    "superagent": "^5.2.2",
    "typescript": "^3.7.4",
    "node-sass": "^4.14.1"
  },
  "resolutions": {
    "minimist": "^1.2.5"
  }
}
