                </div>
            </div>
        </div>

        <div class="container">
            <div class="hero__content footer__content">
                <p class="hero__subheading"><%- data.date %> Â· <%- data.read %> </p>
                <h1 class="hero__heading"><%- data.title %></h1>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="post-template__header">
                <picture class="post-template__img-wrapper">
                    <source type="image/jpeg" srcset="<%= data.hero_2xjpeg %>">
                    <source type="image/webp" srcset="<%= data.hero_2xwebp %>">
                    <source type="image/webp" srcset="<%= data.hero_webp %>">
                    <source type="image/webp" srcset="<%= data.hero_sml_webp %>">
                    <source srcset="<%= data.hero_sml %>"
                            media="(min-width: 768px)">
                    <img class="post-template__img" src="<%= data.hero %>" alt="<%= data.alt %>">
                </picture>
            </div>
        </div>

    </section>

    <section>
        <div class="container">
            <div class="post-template__content">
                <%- content %>
            </div>
        </div>
    </section>

    <%- include("../partials/latest_posts") %>
</main>

<%- include("../partials/footer") %>
</body>
</html>